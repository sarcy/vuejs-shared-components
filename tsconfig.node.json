{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    // "composite": true,
    
    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true,
    
    // this build works with these lines commented out but for some reason it is not adding the styles files.
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,

    "declaration": true,
    "outDir": "dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "exclude": ["src/App.vue", "src/main.ts", "src/components/HelloWorld.vue"],
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/components/**/*.vue"],
}
